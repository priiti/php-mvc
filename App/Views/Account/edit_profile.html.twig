{% extends "base.html.twig" %}

{% block title %}Profiil{% endblock %}

{% block body %}

    <ul class="list-group">
        {% for error in user.errors %}
            <li class="list-group-item list-group-item-danger">{{ error }}</li>
        {% endfor %}
    </ul>

    <h1>Profiil</h1>
    <form action="/account/save" method="post">
        <div class="form-group">
            <label for="firstName">Eesnimi:</label>
            <input type="text" name="firstname" class="form-control" id="firstName" placeholder="Eesnimi" required autofocus value="{{ user.firstname }}">
        </div>
        <div class="form-group">
            <label for="lastName">Perenimi:</label>
            <input type="text" name="lastname" class="form-control" id="lastName" placeholder="Perenimi" required value="{{ user.lastname }}">
        </div>
        <div class="form-group">
            <label for="email">E-mail:</label>
            <input type="email" name="email" class="form-control" id="email" placeholder="E-mail" required value="{{ user.user_email }}">
        </div>
        <button type="submit" class="btn btn-default">Salvesta</button>
    </form>
{% endblock %}