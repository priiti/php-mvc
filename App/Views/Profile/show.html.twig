{% extends "base.html.twig" %}

{% block title %}Profiil{% endblock %}

{% block body %}
    <div class="col-md-6">
        <h1><span class="glyphicon glyphicon-user" aria-hidden="true"></span> Profiil</h1>
        <ul class="list-group">
            <li class="list-group-item"><strong>E-mail: </strong><br>{{ user.user_email }}</li>
            <li class="list-group-item"><strong>Eesnimi: </strong><br>{{ user.firstname }}</li>
            <li class="list-group-item"><strong>Perenimi: </strong><br>{{ user.lastname }}</li>
        </ul>
        {% if current_user.is_admin %}
            <form action="/profile/edit" method="post">
                <button class="btn btn-default">Muuda kasutaja andmeid</button>
            </form>
        {% endif %}
    </div>
    <div class="col-md-6"></div>
{% endblock %}