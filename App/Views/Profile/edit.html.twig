{% extends "base.html.twig" %}

{% block title %}Profiil{% endblock %}

{% block body %}

    <ul class="list-group">

        {% for error in user.errors %}

            <li class="list-group-item list-group-item-danger">{{ error }}</li>

        {% endfor %}

    </ul>
    <div class="col-md-6">

        <h1><span class="glyphicon glyphicon-user" aria-hidden="true"></span> Profiil</h1>

        <ul class="list-group">
            <li class="list-group-item list-group-item-warning">Kasutaja andmete muutmine</li>
        </ul>

        <form action="/profile/update" method="post" id="formProfile">
            <div class="form-group">
                <label for="firstName">Eesnimi:</label>
                <input type="text" name="firstname" class="form-control" id="firstName" placeholder="Eesnimi" required value="{{ user.firstname }}">
            </div>
            <div class="form-group">
                <label for="lastName">Perenimi:</label>
                <input type="text" name="lastname" class="form-control" id="lastName" placeholder="Perenimi" required value="{{ user.lastname }}">
            </div>
            <div class="form-group">
                <label for="email">E-mail:</label>
                <input type="email" name="email" class="form-control" id="email" placeholder="E-mail" required value="{{ user.user_email }}">
            </div>
            <div class="checkbox">
                <label>
                    <input class="showPwdCheckbox" type="checkbox">Kuva parool
                </label>
            </div>
            <button type="submit" class="btn btn-default">Salvesta</button>
        </form>
        <br>
        <button class="btn btn-default" onclick="location.href='/profile/show'">TÃ¼hista</button>
    </div>
    <div class="col-md-6"></div>
{% endblock %}