{% extends "base.html.twig" %}
{# Posts page #}
{% block title %}Postitused{% endblock %}

{% block body %}

    {#<div class="col-md-1"></div>#}
    {#<div class="col-md-10">#}
        <h1><span class="glyphicon glyphicon-book" aria-hidden="true"></span> Postitused</h1>

        {% for post in posts %}

            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">{{ post.title }}</h3>
                </div>
                <div class="panel-body">
                    <p>{{ post.create_date | date("d.m.Y") }}</p>
                    <p>{{ post.content }}</p>
                    <button type="button" class="btn btn-default">Ava</button>
                </div>
            </div>

        {% endfor %}

    {#</div>#}
    {#<div class="col-md-1"></div>#}
{% endblock %}