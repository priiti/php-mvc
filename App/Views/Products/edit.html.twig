{% extends "base.html.twig" %}

{% block title %}Muuda toodet{% endblock %}

{% block body %}
    <h1><span class="glyphicon glyphicon-shopping-cart" aria-hidden="true"></span> Toote andmete muutmine</h1>

    <div class="col-md-6">
        <form action="/products/save" method="post" id="formEditProduct">
            <div class="form-group">
                <label for="product_id">Toote ID:</label>
                <p>{{ product.id }}</p>
                <input class="form-control" name="product_id" type="hidden" id="product_id" value="{{ product.id }}" />
            </div>
            <div class="form-group">
                <label for="product_name">Toote nimetus:</label>
                <input type="text" name="product_name" class="form-control" id="product_name" placeholder="Toote nimi" value="{{ product.product_name }}" />
            </div>
            <div class="form-group">
                <label for="product_price">Toote hind:</label>
                <input type="text" name="product_price" class="form-control" id="product_price" placeholder="Toote hind" value="{{ product.product_price }}"/>
            </div>
            <div class="form-group">
                <label for="user_id">Toote omanik:</label>
                <select class="form-control" name="selected_user_id">
                    <option value="{{ product.product_owner_id }}">{{ product.product_owner_name }}</option>

                    {% for user in users %}

                        <option value="{{ user.user_id }}">{{ user.full_name }}</option>

                    {% endfor %}

                </select>
            </div>
            <button type="submit" class="btn btn-success">Salvesta</button>
        </form>
        <br>
        <button class="btn btn-default" onclick="location.href='/products/index'">Tagasi toodete loetellu</button>
    </div>
    <div class="col-md-6"></div>

{% endblock %}