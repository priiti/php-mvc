{% extends "base.html.twig" %}

{% block title %}Tooted{% endblock %}

{% block body %}
    <h1><span class="glyphicon glyphicon-shopping-cart" aria-hidden="true"></span> Tooted</h1>

    {% if products is empty %}

        <ul class="list-group">
            <li class="list-group-item list-group-item-info">Tooted puuduvad!</li>
        </ul>

    {% else %}

    <table class="table table-bordered">
        <tr>
            <th class="col-md-1">ID</th>
            <th class="col-md-3">Toode</th>
            <th class="col-md-3">Hind</th>
            <th class="col-md-4">Toote omanik</th>
            <th class="col-md-1">Muuda</th>
        </tr>
        {% for product in products %}
            <tr>
                <td class="col-md-1">{{ product.id }}</td>
                <td class="col-md-3">{{ product.product_name }}</td>
                <td class="col-md-3">{{ product.product_price }}</td>
                <td class="col-md-4">{{ product.product_owner }}</td>
                <td class="col-md-1"><a href="/products/edit/{{ product.id }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a></td>
            </tr>
        {% endfor %}
    </table>

        {% endif %}

        {% if current_user.add_product %}
            <button class="btn btn-default" onclick="location.href='/products/add'">Lisa uus toode</button>
        {% endif %}

{% endblock %}