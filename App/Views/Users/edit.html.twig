{% extends "base.html.twig" %}

{% block title %}{{ users.full_name }}{% endblock %}

{% block body %}

    <h1>Kasutaja info muutmine</h1>

    <div class="col-md-6">

    <form action="/users/save" method="post" id="formProfile">
        <div class="form-group">
            <label for="firstName">Eesnimi:</label>
            <input type="text" name="firstname" class="form-control" id="firstName" placeholder="Eesnimi" required value="{{ users.firstname }}">
        </div>
        <div class="form-group">
            <label for="lastName">Perenimi:</label>
            <input type="text" name="lastname" class="form-control" id="lastName" placeholder="Perenimi" required value="{{ users.lastname }}">
        </div>
        <div class="form-group">
            <label for="email">E-mail:</label>
            <input type="email" name="email" class="form-control" id="email" placeholder="E-mail" required value="{{ users.user_email }}">
        </div>
        <div class="form-group">
            <label for="userRights">Ã•igused:</label>
            <div class="checkbox">
                <label><input type="checkbox" name="roles[add_product]" {% if users.add_product %} checked="checked" {% endif %}>Toodete lisamine</label>
            </div>
            <div class="checkbox">
                <label><input type="checkbox" name="roles[add_post]" {% if users.add_post %} checked="checked" {% endif %}>Postituste lisamine</label>
            </div>
        </div>

        <button type="submit" class="btn btn-default">Salvesta</button>
    </form>
        <br>
        <button class="btn btn-default" onclick="location.href='/users/index'">Tagasi kasutajate loetellu</button>
    </div>

    <div class="col-md-6"></div>

{% endblock %}