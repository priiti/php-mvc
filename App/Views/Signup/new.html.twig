{% extends "base.html.twig" %}
{# Register form page #}
{% block title %}Registreerimine{% endblock %}

{% block footer %}
{% endblock %}

{% block body %}

    <div class="col-md-6">
        <h1>Kasutaja registreerimine</h1>

        {% if user.errors is not empty %}
            <ul class="list-group">
                {% for error in user.errors %}
                    <li class="list-group-item list-group-item-danger">{{ error }}</li>
                {% endfor %}
            </ul>
        {% endif %}
        {# html5 pattern and title implementation TODO #}
        {# validate.js library would be good to consider for client side validation, bottom src TODO#}
        <form method="post" action="/signup/create" id="signupForm">
            <div class="form-group">
                <label for="firstName">Eesnimi:</label>
                <input type="text" name="firstname" class="form-control" id="firstName" placeholder="Eesnimi" required autofocus value="{{ user.firstname }}">
            </div>
            <div class="form-group">
                <label for="lastName">Perenimi:</label>
                <input type="text" name="lastname" class="form-control" id="lastName" placeholder="Perenimi" required value="{{ user.lastname }}">
            </div>
            <div class="form-group">
                <label for="email">E-mail:</label>
                <input type="email" name="email" class="form-control" id="email" placeholder="E-mail" required value="{{ user.email }}">
            </div>
            <div class="form-group">
                <label for="pwd">Sisesta parool:</label>
                <input type="password" name="pwd" class="form-control" id="pwd" placeholder="Sisesta parool" required>
            </div>
            <div class="checkbox">
                <label>
                    <input class="showPwdCheckbox" type="checkbox">Kuva parool
                </label>
            </div>
            <button type="submit" class="btn btn-default">Kinnita</button>
        </form>
    </div>
    <div class="col-md-6"></div>

{% endblock %}